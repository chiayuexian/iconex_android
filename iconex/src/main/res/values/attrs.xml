<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- EditTextLayout -->
    <declare-styleable name="EditTextLayout">
        <attr name="isPassword" format="boolean" />
        <attr name="hasVisibility" format="boolean" />
        <attr name="setHint" format="string" />
        <attr name="setWarning" format="string" />
    </declare-styleable>

    <!-- TTextInputLayout -->
    <declare-styleable name="TTextInputLayout">
        <attr name="inputType" format="string">
            <enum name="text" value="0" />
            <enum name="password" value="1" />
            <enum name="readOnly" value="2" />
            <enum name="file" value="3" />
        </attr>
        <attr name="hint" format="string" />
        <attr name="appendText" format="string" />
    </declare-styleable>

    <!-- TDropdownLayout -->
    <declare-styleable name="TDropdownLayout">
        <attr name="helper" format="string" />
    </declare-styleable>

    <!-- Title bar -->
    <declare-styleable name="TitleBar">
        <attr name="type" format="string">
            <enum name="title" value="0" />
            <enum name="title_option" value="1" />
            <enum name="search" value="2" />
        </attr>
        <attr name="title" format="string" />
        <attr name="optionText" format="string" />
        <attr name="searchHint" format="string" />
    </declare-styleable>


    <declare-styleable name="CustomActionBar">
        <attr name="text" format="string" />
        <attr name="text_button" format="string" />
        <attr name="start_icon" format="integer">
            <enum name="menu" value="0" />
            <enum name="back" value="1" />
            <enum name="none" value="2" />
        </attr>
        <attr name="end_icon" format="integer">
            <enum name="info" value="0" />
            <enum name="more" value="1" />
            <enum name="text" value="2" />
            <enum name="none" value="3" />
        </attr>
        <attr name="show_ic_toggle" format="boolean" />
    </declare-styleable>

    <attr name="size" format="integer" />
    <attr name="index" format="integer" />

    <declare-styleable name="TotalAssetsIndicator">
        <attr name="size" />
        <attr name="index" />
    </declare-styleable>

    <declare-styleable name="WalletIndicator">
        <attr name="size" />
        <attr name="index" />
    </declare-styleable>

    <declare-styleable name="CustomSeekbar">
        <attr name="progress" format="integer" />
        <attr name="max" format="integer" />
    </declare-styleable>
</resources>