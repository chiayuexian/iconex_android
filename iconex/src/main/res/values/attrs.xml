<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- EditTextLayout -->
    <declare-styleable name="EditTextLayout">
        <attr name="isPassword" format="boolean" />
        <attr name="hasVisibility" format="boolean" />
        <attr name="setHint" format="string" />
        <attr name="setWarning" format="string" />
    </declare-styleable>

    <!-- TTextInputLayout -->
    <declare-styleable name="TTextInputLayout">
        <attr name="inputType" format="string">
            <enum name="text" value="0" />
            <enum name="password" value="1" />
            <enum name="readOnly" value="2" />
        </attr>
        <attr name="hint" format="string" />
    </declare-styleable>

    <!-- Title bar -->
    <declare-styleable name="TitleBar">
        <attr name="type" format="string">
            <enum name="title" value="0" />
            <enum name="title_option" value="1" />
            <enum name="search" value="2" />
        </attr>
        <attr name="title" format="string" />
    </declare-styleable>
</resources>