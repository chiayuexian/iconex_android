<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="0dp"
        android:layout_height="109dp"
        android:orientation="vertical"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_marginTop="73dp"
        android:paddingTop="9dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"

        android:background="@drawable/bg_wallet_card_expaned">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="22dp">

            <!-- TODO: DemiLight -->
            <TextView
                android:id="@+id/lb_staked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentLeft="true"

                android:textSize="10dp"
                android:textColor="@color/dark"

                android:text="Stacked (%)"/>

            <TextView
                android:id="@+id/txt_staked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentRight="true"

                android:fontFamily="@font/nanum_square_regular"
                android:textSize="10dp"
                android:textColor="@color/dark"

                android:text="90.5"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/lb_voting_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentLeft="true"

                android:textSize="10dp"
                android:textColor="@color/dark"

                android:text="Voting Power (VP)"/>

            <TextView
                android:id="@+id/txt_voting_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentRight="true"

                android:fontFamily="@font/nanum_square_regular"
                android:textSize="10dp"
                android:textColor="@color/dark"

                android:text="0.0000"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/lb_iscore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentLeft="true"

                android:textSize="10dp"
                android:textColor="@color/dark"

                android:text="I-Score (ISC)"/>

            <TextView
                android:id="@+id/txt_iscore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentRight="true"

                android:fontFamily="@font/nanum_square_regular"
                android:textSize="10dp"
                android:textColor="@color/dark"

                android:text="0.0000"/>
        </RelativeLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/wallet_item_layout"
        android:layout_width="0dp"
        android:layout_height="82dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:clickable="true"

        android:background="@drawable/bg_wallet_card">

        <ImageView
            android:id="@+id/img_symbol"
            android:layout_width="32dp"
            android:layout_height="32dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"

            android:layout_marginTop="26dp"
            android:layout_marginLeft="15dp"

            android:src="@drawable/img_logo_icon_sel"/>

        <TextView
            android:id="@+id/txt_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/img_symbol"

            android:layout_marginTop="22dp"
            android:layout_marginLeft="12dp"

            android:fontFamily="@font/noto_sans_medium"
            android:textSize="14dp"
            android:textColor="@color/dark"

            android:text="ICX"/>

        <!-- TODO: DemiLight font-->
        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@id/txt_symbol"
            app:layout_constraintLeft_toLeftOf="@id/txt_symbol"

            android:layout_marginTop="2dp"

            android:textSize="10dp"
            android:textColor="@color/darkB3"

            android:text="ICON"/>

        <TextView
            android:id="@+id/txt_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/txt_symbol"

            android:layout_marginRight="20dp"

            android:fontFamily="@font/nanum_square_bold"
            android:textSize="14dp"
            android:textColor="@color/dark"

            android:text="900,000,000.0004"/>

        <TextView
            android:id="@+id/txt_exchanged"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintRight_toRightOf="@id/txt_amount"
            app:layout_constraintBaseline_toBaselineOf="@id/txt_name"

            android:fontFamily="@font/nanum_square_regular"
            android:textSize="10dp"
            android:textColor="@color/darkB3"

            android:text="9,000.0004 ETH"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>