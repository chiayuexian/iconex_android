<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context="foundation.icon.iconex.wallet.create.CreateWalletStep3Fragment">

    <include
        android:id="@+id/step"
        layout="@layout/layout_step3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/layout_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/darkE6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/darkFC"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/btn_prev"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_rounded_02"
                android:fontFamily="@font/noto_sans_regular"
                android:gravity="center"
                android:text="@string/back"
                android:textAllCaps="false"
                android:textColor="@color/txt_btn_rounded_02"
                android:textSize="14dp" />

            <Button
                android:id="@+id/btn_next"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="6dp"
                android:layout_weight="2"
                android:background="@drawable/bg_btn_rounded_01_light"
                android:fontFamily="@font/noto_sans_regular"
                android:gravity="center"
                android:text="@string/next"
                android:textAllCaps="false"
                android:textColor="@color/txt_btn_rounded_01_light"
                android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/layout_buttons"
        android:layout_below="@id/step">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <TextView
                style="@style/TextView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/noto_sans_medium"
                android:text="@string/walletDownloadGuide"
                android:textColor="@color/dark4D" />

            <Button
                android:id="@+id/btn_back_up"
                style="@style/TextButton"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_btn_outline_01"
                android:fontFamily="@font/noto_sans_light"
                android:text="@string/walletDownload"
                android:textColor="@color/txt_btn_outline_01"
                android:textSize="10dp" />

            <TextView
                style="@style/TextView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_outline_box_cyan"
                android:fontFamily="@font/noto_sans_regular"
                android:padding="20dp"
                android:text="@string/step3Header"
                android:textColor="@color/primary00" />

            <TextView
                style="@style/TextView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/noto_sans_light"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/createWalletStep3Detailed1"
                android:textColor="@color/primary00" />

            <TextView
                style="@style/TextView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/noto_sans_light"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/createWalletStep3Detailed2"
                android:textColor="@color/primary00" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
