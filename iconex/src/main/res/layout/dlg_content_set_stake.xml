<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <!-- TODO: font DemiLight -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lb_time_required"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"

                android:fontFamily="@font/noto_sans_light"
                android:text="@string/dialogLabelTimeRequired"
                android:textColor="@color/dark80"

                android:textSize="10dp" />

            <TextView
                android:id="@+id/txt_time_required"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/lb_time_required"
                android:layout_alignParentRight="true"

                android:fontFamily="@font/nanum_square_bold"
                android:textColor="@color/dark"
                android:textSize="10dp"

                tools:text="Immediately" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp">

            <TextView
                android:id="@+id/lb_step_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/noto_sans_light"
                android:text="@string/dialogLabelStepLimit"
                android:textColor="@color/dark80"

                android:textSize="10dp" />

            <TextView
                android:id="@+id/txt_step_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/lb_step_limit"
                android:layout_alignParentRight="true"

                android:fontFamily="@font/nanum_square_bold"
                android:textColor="@color/dark"
                android:textSize="10dp"

                tools:text="100,000/ 0asdlfajsdf" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="11dp">

            <TextView
                android:id="@+id/lb_estimated_max_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/noto_sans_light"
                android:text="@string/dialogLabelEstimatedMaxFee"
                android:textColor="@color/dark80"

                android:textSize="10dp" />

            <TextView
                android:id="@+id/txt_estimated_max_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/lb_estimated_max_fee"
                android:layout_alignParentRight="true"

                android:fontFamily="@font/nanum_square_bold"
                android:textColor="@color/dark"
                android:textSize="10dp"

                tools:text="0.0000008" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_exchanged_fee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/nanum_square_bold"

            android:textAlignment="textEnd"
            android:textColor="@color/darkB3"
            android:textSize="10dp"

            tools:text="$ 0.0001" />
    </LinearLayout>
</LinearLayout>