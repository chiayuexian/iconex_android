<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp">

        <Button
            android:id="@+id/btn_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:background="@drawable/ic_appbar_close" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/noto_sans_medium"
            android:gravity="center"
            android:lineSpacingExtra="8dp"
            android:text="@string/data"
            android:textColor="@color/colorText"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txt_confirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="24dp"
            android:background="@color/colorWhite"
            android:fontFamily="@font/noto_sans_light"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/dark80"
            android:textSize="12dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#ededed" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="34dp"
        android:paddingEnd="24dp"
        android:paddingStart="24dp"
        android:paddingTop="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_medium"
            android:gravity="center_horizontal|center_vertical"
            android:lineSpacingExtra="10dp"
            android:text="@string/type"
            android:textColor="@color/dark80"
            android:layout_marginTop="20dp"
            android:textSize="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_utf"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_left"
                android:fontFamily="@font/noto_sans_regular"
                android:gravity="center"
                android:text="UTF-8"
                android:textAllCaps="false"
                android:textColor="@color/text_selector_primary"
                android:textSize="10dp" />

            <Button
                android:id="@+id/btn_hex"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginStart="-1dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_right"
                android:fontFamily="@font/noto_sans_regular"
                android:gravity="center"
                android:text="HEX"
                android:textAllCaps="false"
                android:textColor="@color/text_selector_primary"
                android:textSize="10dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>