<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMain"
    tools:context=".view.ui.auth.AuthLockNumFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txt_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_medium"
            android:gravity="center_horizontal"
            android:text="@string/enterLockNum"
            android:textColor="@color/colorWhite50"
            android:textSize="18dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/editNum"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_centerInParent="true"
                android:background="@color/colorMain"
                android:enabled="false"
                android:focusable="false"
                android:maxLength="6"
                android:textColor="@color/colorMain" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/num1"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/img_white_circle" />

                <ImageView
                    android:id="@+id/num2"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/img_white_circle" />

                <ImageView
                    android:id="@+id/num3"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/img_white_circle" />

                <ImageView
                    android:id="@+id/num4"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/img_white_circle" />

                <ImageView
                    android:id="@+id/num5"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/img_white_circle" />

                <ImageView
                    android:id="@+id/num6"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/img_white_circle" />
            </LinearLayout>
        </RelativeLayout>

        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:rowCount="3">

            <Button
                android:id="@+id/btnNum1"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/bg_btn_keypad"
                android:fontFamily="@font/nanum_square_regular"
                android:text="1"
                android:textColor="@color/colorWhite"
                android:textSize="32dp" />

            <Button
                android:id="@+id/btnNum2"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="32dp"
                android:background="@drawable/bg_btn_keypad"
                android:fontFamily="@font/nanum_square_regular"
                android:text="2"
                android:textColor="@color/colorWhite"
                android:textSize="32dp" />

            <Button
                android:id="@+id/btnNum3"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="32dp"
                android:background="@drawable/bg_btn_keypad"
                android:fontFamily="@font/nanum_square_regular"
                android:text="3"
                android:textColor="@color/colorWhite"
                android:textSize="32dp" />

            <Button
                android:id="@+id/btnNum4"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/bg_btn_keypad"
                android:fontFamily="@font/nanum_square_regular"
                android:text="4"
                android:textColor="@color/colorWhite"
                android:textSize="32dp" />

            <Button
                android:id="@+id/btnNum5"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="32dp"
                android:background="@drawable/bg_btn_keypad"
                android:fontFamily="@font/nanum_square_regular"
                android:text="5"
                android:textColor="@color/colorWhite"
                android:textSize="32dp" />

            <Button
                android:id="@+id/btnNum6"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="32dp"
                android:background="@drawable/bg_btn_keypad"
                android:fontFamily="@font/nanum_square_regular"
                android:text="6"
                android:textColor="@color/colorWhite"
                android:textSize="32dp" />

            <Button
                android:id="@+id/btnNum7"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/bg_btn_keypad"
                android:fontFamily="@font/nanum_square_regular"
                android:text="7"
                android:textColor="@color/colorWhite"
                android:textSize="32dp" />

            <Button
                android:id="@+id/btnNum8"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="32dp"
                android:background="@drawable/bg_btn_keypad"
                android:fontFamily="@font/nanum_square_regular"
                android:text="8"
                android:textColor="@color/colorWhite"
                android:textSize="32dp" />

            <Button
                android:id="@+id/btnNum9"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="32dp"
                android:background="@drawable/bg_btn_keypad"
                android:fontFamily="@font/nanum_square_regular"
                android:text="9"
                android:textColor="@color/colorWhite"
                android:textSize="32dp" />

            <View
                android:layout_width="72dp"
                android:layout_height="72dp" />

            <Button
                android:id="@+id/btnNum0"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="32dp"
                android:background="@drawable/bg_btn_keypad"
                android:fontFamily="@font/nanum_square_regular"
                android:text="0"
                android:textColor="@color/colorWhite"
                android:textSize="32dp" />

            <ImageView
                android:id="@+id/btn_delete"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="32dp"
                android:background="@drawable/bg_btn_keypad"
                android:padding="23dp"
                android:src="@drawable/btn_keypad_delete_white" />
        </GridLayout>

        <RelativeLayout
            android:id="@+id/layout_lost_lock_num"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txt_lost_lock_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/noto_sans_medium"
                android:gravity="center_horizontal"
                android:text="@string/forgotLockNumGuide"
                android:textColor="@color/colorWhite50"
                android:textSize="12dp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
