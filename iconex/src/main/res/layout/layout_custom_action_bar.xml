<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/primary">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"

            android:fontFamily="@font/noto_sans_medium"
            android:textSize="14dp"
            android:textColor="@android:color/white"
            android:ellipsize="end"
            android:maxLines="1"

            tools:text="Wallets"/>

        <ImageView
            android:id="@+id/img_toggle"
            android:layout_width="20dp"
            android:layout_height="20dp"

            android:src="@drawable/ic_toggle"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_start_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        
        android:layout_marginLeft="10dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_appbar_menu"/>

    <ImageButton
        android:id="@+id/btn_end_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"

        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"

        android:layout_marginRight="10dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_appbar_more"/>

    <Button
        android:id="@+id/btn_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        style="@style/Widget.AppCompat.Button.Borderless"

        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"

        android:fontFamily="@font/noto_sans_light"
        android:textSize="12dp"
        android:textColor="#99FFFFFF"
        android:textAllCaps="false"

        tools:text="Button Text" />
</RelativeLayout>